@page
@model Test3.Pages.Admin.ReportedPostAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Rapporter</h1>

<h4>Vill du verkligen rapportera detta inlägg?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="ReportedPost.PostId"/>
            <input type="hidden" asp-for="ReportedPost.ReportedDate" />
            
            <div class="form-group">
                <input type="submit" value="Rapportera" class="btn btn-danger" />
                <a asp-page="Index" class="btn btn-outline-secondary">Tillbaka Till Listan</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
