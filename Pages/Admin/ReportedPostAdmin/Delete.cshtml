@page
@model Test3.Pages.Admin.ReportedPostAdmin.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
@if (User.Identity != null && User.Identity.Name == "mike.1985@live.se")
{
    <h1>Rapporterad Inlägg</h1>

    <h3>Vill du verkligen ignorera denna rapport?</h3>
    <div>
        <h4></h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReportedPost.Post)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReportedPost.Post.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReportedPost.ReportedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReportedPost.ReportedDate)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="ReportedPost.Id" />
            <input type="submit" value="Ignorera Rapport" class="btn btn-dark" /> 
            <a asp-page="./Index" class="btn btn-secondary">Tillbaka Till Listan</a>
        </form>
    </div>
}
