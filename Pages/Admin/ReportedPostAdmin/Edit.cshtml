@page
@model Test3.Pages.Admin.ReportedPostAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}
@if(User.Identity != null && User.Identity.Name == "mike.1985@live.se")
{
    <h1>Edit</h1>

    <h4>ReportedPost</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReportedPost.Id" />
                <div class="form-group">
                    <label asp-for="ReportedPost.PostId" class="control-label"></label>
                    <select asp-for="ReportedPost.PostId" class="form-control" asp-items="ViewBag.PostId"></select>
                    <span asp-validation-for="ReportedPost.PostId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReportedPost.ReportedDate" class="control-label"></label>
                    <input asp-for="ReportedPost.ReportedDate" class="form-control" />
                    <span asp-validation-for="ReportedPost.ReportedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}
