@page
@inject SignInManager<IdentityUser> SignInManager
@model Test3.Pages.Admin.PostAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}


    <h1>Inlägg</h1>

    <h4 class="btn btn-primary">Skapa ett nytt inlägg</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Post.Title" class="control-label"></label>
                    <input asp-for="Post.Title" class="form-control" />
                    <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Post.Text" class="control-label"></label>
                    <textarea asp-for="Post.Text" rows="5" cols="50" class="form-control"></textarea>
                    <span asp-validation-for="Post.Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Post.SubCategoryId" class="control-label"></label>
                    <select asp-for="Post.SubCategoryId" class ="form-control" asp-items="ViewBag.SubCategoryId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Post.Image" class="control-label"></label>
                    <input type="file" name="UploadedImage" class="form-control" />
                </div>

                <br />
                <input type="hidden" asp-for="Post.Date" />
                <input type="hidden" asp-for="Post.UserId" />

                <div class="form-group">
                    <input type="submit" value="Skapa Inlägg" class="btn btn-success" />
                    @if(User.Identity.Name == "mike.1985@live.se")
                    {
                        <a asp-page="Index" class="btn btn-secondary">Tillbaka Till Listan</a>
                    }
                    else
                    {
                        <a asp-page="/Index" class="btn btn-secondary">Tillbaka Till Startsidan</a>
                    }
                    
                </div>
            </form>
        </div>
    </div>

    <div>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
